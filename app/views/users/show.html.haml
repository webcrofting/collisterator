%p#notice

%div
  %h3 Welcome, #{@user.email}
  %h4 My Lists:
  - @items = @user.root_items
  %table.table
    %tr
      %th
        List name
    - @items.each do |item|
      %tr
        %td
          = link_to "#{item.data["title"]}", item_path(item)
        %td
          = button_to "Share", item_shares_path, "data-toggle" => "modal", "data-target" => "#share-list-button-dialog"
          =render :partial => "share_list", locals: {item: item, user: @user}

- @shared_items = @user.shared_items
- unless @shared_items
  %h4 Shared Lists:
  %table.table
    %tr
      %th
        List name
    - @shared_items.each do |shared_item|
      %tr
        %td
          = link_to "#{shared_item.data}", item_path(shared_item)
