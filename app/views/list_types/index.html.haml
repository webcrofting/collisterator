.row
  .span12
    %table.table.table-striped
      %tr	
      - @list_types.each do |list_type|
        %tr	
          %td
            = list_type.name
            = link_to list_type_path(list_type) do
              %i.icon-search
        
          %td
            = link_to edit_list_type_path(list_type) do
              %i.icon-edit
          %td
            %a{new_list_html_attrs(list_type.id)} 
              %i.icon-list
          -if current_user && current_user.role?("admin")
            %td
              =form_for list_type do |f|
                = f.hidden_field :featured, :value => true   
                = f.submit "Feature List"
    :javascript
      Collisterator.bindCreateNewList();

    = link_to 'New List type', new_list_type_path
