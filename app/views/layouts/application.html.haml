!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Collisterator"
    %meta{:content => "collisterator - Lists as a Service", :name => "description"}
    %meta{:content => "web|crofting ltd", :name => "author"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  .container
    %body
      %header.navbar.navbar-top
        %nav.navbar-inner
          .container
            = render 'layouts/navigation'
      #main{:role => "main"}
      .row
        .span12
          %p#notice
            = render 'layouts/messages'
      = yield
      %footer
