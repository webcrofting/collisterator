= link_to "Collisterator", root_path, :class => 'brand'
%ul.nav
  %li
    = link_to 'New Listtype', new_list_type_path
  %li
    = link_to 'New List', list_types_path
%ul.nav.pull-right
  - if user_signed_in?
    %li
      - email = current_user.email
      = link_to(email, profile_path(email))
    %li
      = link_to('Logout', destroy_user_session_path, :method => :delete)
  - else
    %li
      = render 'devise/menu/registration_items'
    %li.divider-vertical
    %li.dropdown
      %a(class="dropdown-toggle" href="#" data-toggle="dropdown")
        %i.icon-user
        Login or Register
      %div(class="dropdown-menu" role="menu" aria-labelledby="dLabel" style="padding: 15px; padding-bottom: 0px;")
        = render 'devise/sessions/form'
